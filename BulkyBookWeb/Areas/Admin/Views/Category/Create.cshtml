@model Category

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <h2 class="text-dark">Add new category</h2>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name">Name of the category</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder">Display order</label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-dark" style="width:150px">Back</a>
    </div> 
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}